<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/magnitude_cycle"
        android:gravity="center" />

    <TextView
        android:id="@+id/country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        tools:text="Country" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/casesColor"
            tools:text="Cases" />


        <TextView
            android:id="@+id/today_cases"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_upward_red"
            android:gravity="end"
            android:textSize="10dp"
            android:textColor="@color/casesColor"
            tools:text="Today" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recovered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/recoverColor"
            tools:text="Recover" />


        <TextView
            android:id="@+id/today_recover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_upward_green"
            android:gravity="end"
            android:textColor="@color/recoverColor"
            android:textSize="10dp"
            tools:text="Today" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/dethColor"
            tools:text="Deaths" />


        <TextView
            android:id="@+id/today_deth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_arrow_upward_black"
            android:gravity="end"
            android:textSize="10dp"
            android:textColor="@color/dethColor"
            tools:text="Today" />


    </LinearLayout>


</LinearLayout>