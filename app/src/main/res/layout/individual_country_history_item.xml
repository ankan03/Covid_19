<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="horizontal"
    android:padding="10dp">


    <TextView
        android:id="@+id/individual_country_history_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        tools:text="Date" />


    <TextView
        android:id="@+id/individual_country_history_cases"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="end"
        android:textColor="@color/casesColor"
        tools:text="Status" />

    <TextView
        android:id="@+id/individual_country_history_recover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="end"
        android:textColor="@color/recoverColor"
        tools:text="Status" />


    <TextView
        android:id="@+id/individual_country_history_daths"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="end"
        android:textColor="@color/dethColor"
        tools:text="Status" />


</LinearLayout>